<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_bar"
            android:backgroundTint="@color/verde_primario"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/verde_primario"
                android:contentDescription="@string/todo"
                android:minHeight="48dp"
                android:onClick="atras"
                android:src="@drawable/ic_flecha_atras"
                tools:ignore="DuplicateSpeakableTextCheck" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="65dp"
                android:layout_marginVertical="20dp"
                android:text="@string/estatus_consultorio"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/coolvetica"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/estatusConsultorio_estado_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/estatus"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/coolvetica"/>

        <androidx.cardview.widget.CardView
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="63dp">
            <ImageView
                android:id="@+id/estatusConsultorio_estado_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_no_disponible"
                android:scaleType="fitXY"
                android:contentDescription="@string/todo" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/doctor"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/coolvetica"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="50dp">
                    <ImageView
                        android:id="@+id/estatusConsultorio_doctor_foto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_no_disponible"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/todo" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/estatusConsultorio_doctorNombre_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/nombre"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/coolvetica"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/especialidades"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/coolvetica"/>

                <TextView
                    android:id="@+id/estatusConsultorio_doctorEspecialidades_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/todo"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/coolvetica"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/horarios"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/coolvetica"/>

                <TextView
                    android:id="@+id/estatusConsultorio_doctorHorarios_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/todo"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/coolvetica"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/doctorEstatusConsultorio_cambio_boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_button"
            android:fontFamily="@font/coolvetica"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/cambiar_status"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:onClick="cambiarEstatus"
            android:enabled="false"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/doctorEstatusConsultorio_tomar_boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_button"
            android:fontFamily="@font/coolvetica"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/tomar_turno"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:onClick="tomarTurno"
            android:enabled="false"
            android:textSize="24sp" />
        <Button
            android:id="@+id/doctorEstatusConsultorio_terminar_boton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/finalizar_turno"
            android:textColor="@color/black"
            android:fontFamily="@font/coolvetica"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:onClick="terminarTurno"
            android:enabled="false"
            android:layout_marginHorizontal="10dp"
            />

    </LinearLayout>

</ScrollView>