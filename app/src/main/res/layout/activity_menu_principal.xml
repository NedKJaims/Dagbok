<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_bar"
            android:backgroundTint="@color/verde_fondo"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/menu_principal"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:fontFamily="@font/coolvetica"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/bienvenido"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/coolvetica"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menuPrincipal_foto_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_no_disponible"
                android:contentDescription="@string/todo"/>
            <TextView
                android:id="@+id/menuPrincipal_nombre_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/nombre"
                android:textColor="@color/black"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/azul">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_estatus_consultorio"
                            android:contentDescription="@string/todo"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:fontFamily="@font/coolvetica"
                            android:textSize="20sp"
                            android:text="@string/estatus_consultorio"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/azul">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_citas"
                            android:contentDescription="@string/todo"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:fontFamily="@font/coolvetica"
                            android:textSize="20sp"
                            android:text="@string/citas"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginHorizontal="2dp"
                    android:onClick="configuracion"
                    app:cardBackgroundColor="@color/azul">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_configuracion"
                            android:contentDescription="@string/todo"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:fontFamily="@font/coolvetica"
                            android:textSize="20sp"
                            android:text="@string/configuracion"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_marginHorizontal="2dp"
                    android:onClick="cerrarSesion"
                    app:cardBackgroundColor="@color/rojo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="4"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_cerrar_sesion"
                            android:contentDescription="@string/todo"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:fontFamily="@font/coolvetica"
                            android:textSize="20sp"
                            android:text="@string/cerrar_sesion"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>