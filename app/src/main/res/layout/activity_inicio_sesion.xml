<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".InicioSesion">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:src="@drawable/ic_icono"
        android:contentDescription="@string/todo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/iniciar_sesion"
                    android:textColor="@color/black"
                    android:fontFamily="@font/coolvetica"
                    android:layout_marginTop="10dp"
                    android:textSize="32sp"
                    android:textAlignment="center"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/correo_electronico"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/iniciosesion_correo_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_edit_text"
                        android:drawableEnd="@drawable/ic_email"
                        android:ems="10"
                        android:fontFamily="@font/coolvetica"
                        android:hint="@string/correo_electronico"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black"
                        tools:ignore="LabelFor,TextContrastCheck,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="@string/contrasena"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    app:boxBackgroundMode="filled"
                    app:boxStrokeWidth="0dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/black"
                    app:boxStrokeWidthFocused="0dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <EditText
                        android:id="@+id/iniciosesion_contraseÃ±a_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/shape_edit_text"
                        android:ems="10"
                        android:fontFamily="@font/coolvetica"
                        android:hint="@string/contrasena"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black"
                        tools:ignore="LabelFor,TextContrastCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_button"
                    android:fontFamily="@font/coolvetica"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:onClick="iniciarSesion"
                    android:text="@string/iniciar_sesion"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:ignore="DuplicateSpeakableTextCheck" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_button"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="@string/registrarse"
                    android:textColor="@color/black"
                    android:fontFamily="@font/coolvetica"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="10dp"
                    android:onClick="registrarse"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/coolvetica"
        android:minHeight="48dp"
        android:onClick="olvidoContrasena"
        android:text="@string/se_me_olvido_contrasena"
        android:textColor="@color/black"
        android:textSize="16sp" />


</LinearLayout>