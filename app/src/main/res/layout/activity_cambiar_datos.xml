<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".CambiarDatos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_title_bar"
            android:backgroundTint="@color/verde_primario"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/verde_primario"
                android:contentDescription="@string/todo"
                android:minHeight="48dp"
                android:onClick="atras"
                android:src="@drawable/ic_flecha_atras" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="65dp"
                android:layout_marginVertical="20dp"
                android:text="@string/cambiar_datos"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/coolvetica"
                />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/nombre"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/cambiarDatos_nombre_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_edit_text"
                android:ems="10"
                android:fontFamily="@font/coolvetica"
                app:drawableTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                tools:ignore="LabelFor, SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/apellidos"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/cambiarDatos_apellidos_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_edit_text"
                android:ems="10"
                android:fontFamily="@font/coolvetica"
                app:drawableTint="@color/black"
                android:inputType="text"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                tools:ignore="LabelFor, SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/estatura"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/cambiarDatos_estatura_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_edit_text"
                android:ems="10"
                android:fontFamily="@font/coolvetica"
                android:inputType="numberDecimal"
                app:drawableTint="@color/black"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                tools:ignore="LabelFor, SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/peso"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/cambiarDatos_peso_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_edit_text"
                android:ems="10"
                android:fontFamily="@font/coolvetica"
                android:inputType="numberDecimal"
                app:drawableTint="@color/black"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                tools:ignore="LabelFor, SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/fecha_nacimiento"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:boxBackgroundMode="filled"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/cambiarDatos_fecha_date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_edit_text"
                android:ems="10"
                android:fontFamily="@font/coolvetica"
                android:inputType="datetime"
                android:focusable="false"
                app:drawableTint="@color/black"
                android:drawableEnd="@drawable/ic_calendar"
                android:textColor="@color/black"
                android:importantForAutofill="no"
                android:onClick="establecerFechaCampo"
                tools:ignore="LabelFor, SpeakableTextPresentCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/sexo"
            android:textColor="@color/black"
            android:fontFamily="@font/coolvetica"/>

        <RadioGroup
            android:id="@+id/cambiarDatos_sexo_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:weightSum="2">
            <RadioButton
                android:id="@+id/hombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:fontFamily="@font/coolvetica"
                android:text="@string/hombre"/>
            <RadioButton
                android:id="@+id/mujer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/coolvetica"
                android:text="@string/mujer"/>
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/aceptar"
            android:textColor="@color/black"
            android:fontFamily="@font/coolvetica"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:onClick="cambiarDatos"
            android:layout_marginHorizontal="10dp" />

    </LinearLayout>

</ScrollView>